{
  "name": "automated-cloud-advisor",
  "version": "0.0.1",
  "author": "ayyaz.akhtar@disneystreaming.com",
  "description": "Automated Cloud Advisor",
  "repository": {
    "type": "git",
    "url": "https://github.com/disneystreaming/automated-cloud-advisor.git"
  },
  "license": "Apache-2.0",
  "keywords": [
    "aws",
    "devops",
    "automation",
    "cloud"
  ],
  "directories": {
    "doc": "docs"
  },
  "files": [
    "src",
    "install.js"
  ],
  "bin": "./install.js",
  "main": "install.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:coverage": "jest && codecov"
  },
  "dependencies": {
    "inquirer": "^7.2.0"
  },
  "devDependencies": {
    "aws-sdk": "^2.673.0",
    "babel-eslint": "^10.1.0",
    "codecov": "^3.7.2",
    "eslint": "^7.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.10.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.0.1",
    "jest-sonar-reporter": "^2.0.0",
    "lint": "^0.7.0",
    "semantic-release": "^17.1.1"
  },
  "eslintConfig": {
    "extends": "standard",
    "parser": "babel-eslint",
    "plugins": [
      "jest",
      "react"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest/globals": true
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "react/jsx-uses-vars": "error",
      "react/jsx-uses-react": "error"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testResultsProcessor": "jest-sonar-reporter",
    "collectCoverage": true,
    "silent": true,
    "projects": [
      "src"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml"
  }
}
